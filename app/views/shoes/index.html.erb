<p id="notice"><%= notice %></p>

<h1>Listing Shoes</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Price</th>
      <th>Wesbite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.name %></td>
        <td><%= shoe.brand %></td>
        <td><%= shoe.category %></td>
        <td><%= shoe.price %></td>
        <td><%= shoe.wesbite %></td>
        <td><%= link_to 'Show', shoe, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_shoe_path(shoe), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shoe', new_shoe_path, class: "btn btn-link" %>
